@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
@using InscripcionCompetenciaFacebookLogin.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Competencia de ideas - CIT</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/IndexStyles.css" rel="stylesheet" />
</head>
<body ng-app="indexApp">
    <div class="jumbotron">
        <div class="container">
            <div class="col-md-6">
                <h2 style="margin-top:10.5px">Centro de Innovación Tecnológica.</h2>
                <h4>¡Participa en nuestra competencia de ideas!</h4> <br /><br />
                <h6>Puedes ingresar con Facebook y registrar tu idea desde ya, ¡no te olvides de votar por las ideas que te gusten!</h6>
                <h6>El periodo de votaciones finalizará el Lunes de semana 6 (25/05)</h6>
            </div>
            <div class="col-md-6">
                <h4 class="text-center">Ingresa a traves de Facebook</h4>
                <div class="col-md-4 col-md-offset-4">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="quote text-center" ng-show="showQuote" ng-controller="indexController">
            <blockquote style="border-left-width:0px">
                <p>{{currentQuote.text}}</p>
                <small>{{currentQuote.author}}</small>
            </blockquote>
        </div>
    </div>
    <hr class="footer" />
    <div class="footer">
        <div class="container text-center">
            <h3 style="margin-top:3px;">Brought to you with <span class="text-danger"><3</span> by CIT.</h3>
        </div>
    </div>

    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.15/angular-animate.js"></script>
    <script src="~/Scripts/indexQuotesApp.js"></script>
</body>
</html>

